generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User{ 
   id  Int      @id @default(autoincrement())
   username  String? @unique
   email String @unique
   password String 
   ProfileUser  String ?
    createdAt          DateTime  @default(now())
    updatedAt DateTime @updatedAt
   token Token?
   post Post[]
  
}
model Token { 
 id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId  Int @unique

}
model Post {
  id  String @default(uuid())
  TitlePosting String @db.VarChar(100)
  userPost User @relation(fields: [name],references: [username])
  LikePost Int ?
  name String    @unique
  imagePost String ? 
 tanggalPosting  DateTime @default(now())  
}

